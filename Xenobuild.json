{
    "buildSystem": {
        "type": "cmake",
        "cmake": {
            "buildTypes": ["Debug", "Release"]
        }
    },
    "dependencies": [
        {
            "source": "github://glfw/glfw:3.3.4",
            "buildSystem": {
                "type": "cmake",
                "cmake": {
                    "definitions": {
                        "GLFW_BUILD_DOCS": "OFF",
                        "GLFW_BUILD_EXAMPLES": "OFF",
                        "GLFW_BUILD_TESTS": "OFF"
                    }
                }
            }
        }, {
            "source": "github://jkuhlmann/cgltf:v1.10",
            "buildSystem": {
                "type": "none",
                "cmake": {
                    "definitions": [
                        {
                            "var": "GGLTF_INCLUDE_DIR",
                            "value": "${installPath}/include",
                            "scope": "public"
                        }
                    ]
                }
            }
        }
    ]
}
